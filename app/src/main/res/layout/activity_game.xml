<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.juan.traspositiontrainer.Game"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/gameCountDown"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/answerCountdown"
        android:layout_below="@+id/gameCountDown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/question_TextView"
        android:layout_below="@+id/answerCountdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GAME PAUSED"
        android:id="@+id/game_paused_textview"
        android:layout_gravity="center_horizontal" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fancySpinner"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button_text"
        android:id="@+id/start_game_button"
        android:onClick="startGame"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/fancySpinner"
        android:layout_toStartOf="@+id/fancySpinner"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Game"
        android:id="@+id/restart_game_button"
        android:layout_alignBaseline="@+id/fancySpinner"
        android:layout_alignBottom="@+id/fancySpinner"
        android:layout_alignLeft="@+id/start_game_button"
        android:layout_alignStart="@+id/start_game_button"
        android:layout_gravity="center_horizontal"
        android:onClick="restartGame" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back to menu"
        android:id="@+id/back_to_menu_button"
        android:layout_above="@+id/restart_game_button"
        android:layout_toRightOf="@+id/answerCountdown"
        android:layout_toEndOf="@+id/answerCountdown"
        android:layout_gravity="center_horizontal"
        android:onClick="backtoMenu" />

</LinearLayout>
