<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/notes_quiz_button"
            android:id="@+id/notes_quiz"
            android:layout_gravity="bottom"
            android:layout_above="@+id/chords_quiz"
            android:layout_alignLeft="@+id/chords_quiz"
            android:layout_alignStart="@+id/chords_quiz"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3"
            android:onClick="goToGame"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/chords_quiz_button"
            android:id="@+id/chords_quiz"
            android:layout_gravity="bottom"
            android:layout_above="@+id/button3"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3"
            android:onClick="goToGame"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq_button"
            android:id="@+id/faq"
            android:layout_gravity="bottom"
            android:layout_marginBottom="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/statistics"
            android:layout_alignStart="@+id/statistics"
            android:layout_alignRight="@+id/statistics"
            android:layout_alignEnd="@+id/statistics"
            android:onClick="goToFaq"/>


    </LinearLayout>




</RelativeLayout>
