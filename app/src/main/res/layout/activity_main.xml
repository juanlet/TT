<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#4F4277">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logo" />
    </LinearLayout>

    <GridLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/notesbuttonselector"
            android:id="@+id/notes_quiz"
            android:layout_gravity="center_horizontal"
            android:onClick="goToGame" />

        <Button
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/chords_quiz"
            android:background="@drawable/chordsbuttonselector"
            android:layout_gravity="center_horizontal"
            android:onClick="goToGame"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/studyNotes"
            android:background="@drawable/studynotesbutton"
            android:layout_gravity="center_horizontal"
            android:onClick="goToStudyNotes"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/studyChords"
            android:background="@drawable/studychordsbutton"
            android:layout_gravity="center_horizontal"
            android:onClick="goToStudyChords"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/faq"
            android:background="@drawable/faqbuttonselector"
            android:layout_gravity="center_horizontal"
            android:onClick="goToFaq"
            android:layout_marginBottom="22dp"/>


    </GridLayout>




</RelativeLayout>