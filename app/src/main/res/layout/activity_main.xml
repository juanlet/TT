<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:drawable/alert_light_frame"
    android:backgroundTint="#ffb20d00">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes Quiz"
        android:id="@+id/notes_quiz"
        android:layout_gravity="bottom"
        android:layout_above="@+id/chords_quiz"
        android:layout_alignLeft="@+id/chords_quiz"
        android:layout_alignStart="@+id/chords_quiz"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHORDS QUIZ"
        android:id="@+id/chords_quiz"
        android:layout_gravity="bottom"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHORD PROGRESSIONS QUIZ"
        android:id="@+id/button3"
        android:layout_gravity="bottom"
        android:layout_above="@+id/statistics"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Stats"
        android:id="@+id/statistics"
        android:layout_gravity="bottom"
        android:layout_above="@+id/faq"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:id="@+id/faq"
        android:layout_gravity="bottom"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/statistics"
        android:layout_alignStart="@+id/statistics"
        android:layout_alignRight="@+id/statistics"
        android:layout_alignEnd="@+id/statistics" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Key"
        android:id="@+id/key_text"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/mode_spinner"
        android:layout_toLeftOf="@+id/notes_quiz"
        android:layout_toStartOf="@+id/notes_quiz" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/key_spinner"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_above="@+id/mode_spinner"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mode"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/notes_quiz"
        android:layout_alignLeft="@+id/key_text"
        android:layout_alignStart="@+id/key_text"
        android:layout_marginBottom="25dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mode_spinner"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/key_spinner"
        android:layout_alignStart="@+id/key_spinner"
        android:spinnerMode="dropdown" />

</RelativeLayout>
